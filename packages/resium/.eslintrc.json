{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "root": true,
  "rules": {
    "prettier/prettier": [
      "warn",
      {},
      {
        "usePrettierrc": true
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "rollup.config.js",
        ".storybook/**/*.js",
        "doczrc.js",
        "docs/scripts/generateDoc.js"
      ],
      "extends": ["plugin:node/recommended"],
      "plugins": ["node"],
      "excludedFiles": [".storybook/webpack.config.js"],
      "env": {
        "commonjs": true
      },
      "parserOptions": {
        "sourceType": "module"
      },
      "rules": {
        "node/no-unsupported-features/es-syntax": [
          2,
          {
            "ignores": ["modules"]
          }
        ]
      }
    }
  ]
}
